@model IEnumerable<int>
<select id="chapterDropdown">
    @foreach (var chapter in Model)
    {
        <option value="@chapter">@chapter</option>
    }
</select>
<div id="versesContainer"></div>

<script>
    document.getElementById("chapterDropdown").addEventListener("change", function () {
        let book = document.getElementById("bookDropdown").value;
        fetch(`/Bible/Verses?book=${book}&chapter=${this.value}`)
            .then(response => response.text())
            .then(html => document.getElementById("versesContainer").innerHTML = html);
    });
</script>